#!/bin/bash

#BSUB -G asccasc
#BSUB -q pbatch
#BSUB -nnodes 16
#BSUB -W 60

min_nodes=16
max_nodes=16
tasks_per_node=8
input_dir=/p/gpfs1/chowdhur/io_playground
emulator_executable=/g/g91/chowdhur/codes/hawk_gitlab/hpc_dataflow_manager/workflow_emulator/codes/build/emulator

export LD_LIBRARY_PATH=/opt/ibm/bb/lib:/g/g91/chowdhur/codes/AXL/install/lib64:/g/g91/chowdhur/codes/KVTree/install/lib64:$LD_LIBRARY_PATH

num_nodes=$min_nodes

inter_node=--inter_node
block_size=268435456
segment_count=128

min_iteration=1
max_iteration=2

while [ $num_nodes -le $max_nodes ]
do
    printf "\nNum Clients: "
    echo $num_nodes
    printf "\n"
    iteration=$min_iteration
    while [ $iteration -le $max_iteration ]
    do
        printf "\nIteration: "
        echo $iteration
        printf "\n"
        lrun -N$num_nodes -T$tasks_per_node --env "LD_PRELOAD=/g/g91/chowdhur/codes/darshan/build/lib/libdarshan.so" $emulator_executable --type data --subtype pc --input_dir $input_dir --ranks_per_node $tasks_per_node --block_size $block_size --segment_count $segment_count $inter_node
        #lrun -N$num_nodes -T$tasks_per_node --env "LD_PRELOAD=/g/g91/chowdhur/librecorder/lib/librecorder.so" $emulator_executable --type data --subtype pc --input_dir $input_dir --ranks_per_node $tasks_per_node $inter_node
        rm -rf $input_dir/*
        iteration=$((iteration+1))
    done
    num_nodes=$((num_nodes*2))
done
